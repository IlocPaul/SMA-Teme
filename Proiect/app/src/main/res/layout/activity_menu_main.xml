<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu.MenuMainActivity">

    <TextView
        android:id="@+id/greeting"
        android:text="Hello "
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Gend"
        android:text="Gender:"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/greeting"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Heigh"
        android:text="Height:"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Gend"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/Weigh"
        android:text="Weight:"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Heigh"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"/>





    <TextView
        android:id="@+id/nameUser"
        android:text="Name "
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/height"
        android:text="Height "
        android:layout_below="@id/gender"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/weight"
        android:text="Weight "
        android:layout_below="@id/height"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/gender"
        android:text="Gender "
        android:layout_below="@id/nameUser"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/btnTraining"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

          <LinearLayout
             android:layout_weight="2"
             android:orientation="horizontal"
             android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <Button
                  android:id="@+id/btnExercises"
                  android:text="Exercises"
                  android:textColor="@android:color/white"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="4dp"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"

                  app:cornerRadius="2dp"
                  android:layout_marginStart="8dp" />

              <Button
                  android:id="@+id/btnFragment"
                  android:text="List of exercises"
                  android:textColor="@android:color/white"
                  android:layout_marginLeft="4dp"
                  android:layout_marginRight="8dp"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"

                  app:cornerRadius="2dp"
                  android:layout_marginStart="8dp" />

              </LinearLayout>

        <Button
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/btnFood"
            android:text="Calories"
            android:textColor="@android:color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cornerRadius="2dp"
            android:layout_marginStart="8dp" />
        </LinearLayout>


</RelativeLayout>